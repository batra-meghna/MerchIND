<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login Or Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/login.css">
    <link rel="stylesheet" type="text/css" href="/app.css">
<script src="https://kit.fontawesome.com/be2ceee064.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container p-5">
        <div class="jumbotron mdb-color lighten-2 white-text mx-2 mb-5">
  <h1 class="display-4"><img src="/images/logo.png"></h1>
 
  </div>

        <div class="row">
        <div  class = "col-sm-5" style="z-index: 99; background-color: #2c3e50; margin-right: 5% ;margin-left: 6%; border-radius: 10px;box-shadow: 5px 5px 25px rgba(0,0,0,.2);"  >
        <form action="/login" method="POST">
          <div class="row" style="text-align: center ;background-color: #1b2631;">
              <h2 class="text-center" style="color: white ; margin-left: 40%;padding-top: 4%; padding-bottom: 2%"><strong>LOGIN</strong></h2>
          </div>
          <div style="padding: 3% ;margin-top: 10%; color: white">
                    <div class="form-group">
                      <label for="user_name">Username</label>
                      <input type="text" name="user_name" id="user_name" class="form-control" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                      <label for="_pass">Password</label>
                      <input type="password" name="user_pass" id="_pass" class="form-control" placeholder="Password" required>
                    </div>
                    <% if (locals.login_errors) { 
                      login_errors.forEach(function(error_msg){ %>
                      <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <% });
                    } %>
                    <button type="submit" class="btn btn-success" style="background-color: #19162d ;border-color: #19162d;margin-left: 40%" >Login</button>
                    <ul class="animate">
                      <li></li>
                      <li></li>
                      <li></li>
                      <li></li>
                      <li></li>
                      <li></li>
                      <li></li>
                    </ul>
          </div>
        </form>
      </div>
      <div  div  class = "col-sm-5" style="z-index: 99; background-color: #2c3e50;border-radius: 10px;box-shadow: 5px 5px 25px rgba(0,0,0,.2); ">
             <form action="/register" method="POST" novalidate> 
            <div class="row center-align" style="background-color: #1b2631;">
              <h2 div  class="text-center" style="color: white ; margin-left: 32%; padding-top: 4%; padding-bottom: 2%"><strong>REGISTER</strong></h2>
            </div>
            <div style="padding: 3%; color: white">
                  <div class="form-group">
                    <label for="f_name">First Name</label>
                    <input type="text" name="f_name" id="f_name" class="form-control" placeholder="First Name" required>
                  </div>
                  <div class="form-group">
                    <label for="l_name">Last Name.</label>
                    <input type="text" name="l_name" id="l_name" class="form-control" placeholder="Last Name" required>
                      <div class="form-group" style="margin-top: 3%">
                        <label for="phone">PhoneNo</label>
                        <input type="text" name="phone" id="phone" class="form-control" placeholder="987-654-3210" value="<%= (locals.old_data) ? old_data.phone : ''; %>" required>
                      </div>
                      <div class="form-group">
                        <label for="_rname">Username</label>
                        <input type="text" name="user_name" id="_rname" class="form-control" placeholder="Username" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
                      </div>
                      <div class="form-group">
                        <label for="_rpass">Password</label>
                        <input type="password" name="user_pass" id="_rpass" class="form-control" placeholder="Password" required>
                      </div>
                      <% if (locals.register_error) { 
                      register_error.forEach(function(error_msg){ %>
                        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                        <% });
                        } %>
                        <button type="submit" class="btn btn-success" style="background-color: #19162d ;border-color: #19162d;margin-left: 40%">Sign Up</button>
                        <ul class="animate">
                          <li></li>
                          <li></li>
                          <li></li>
                          <li></li>
                          <li></li>
                          <li></li>
                          <li></li>
                        </ul>
                </div>
            </form>
      </div>
    </div>
</body>
</html>